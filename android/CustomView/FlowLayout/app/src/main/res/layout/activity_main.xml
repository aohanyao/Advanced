            android:layout_height="wrap_content" />
        <Button
            android:layout_width="wrap_content"
            android:text="MainActivity"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="wrap_content"
            android:text="A"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="wrap_content"
            android:text="B"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="wrap_content"
            android:text="RelativeLayout"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="wrap_content"
            android:text="Button"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="wrap_content"
            android:text="layout_width"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="wrap_content"
            android:text="wrap_content"
            android:layout_height="wrap_content" />
